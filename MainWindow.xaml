<Window x:Class="FpsMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FPS Monitor"
        Width="260"
        Height="150"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Border Padding="12"
            BorderThickness="1"
            BorderBrush="Gray"
            CornerRadius="6">

        <StackPanel>

            <!-- 現在FPS -->
            <TextBlock x:Name="CurrentFpsText"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,6"/>

            <!-- 平均FPS -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,6">
                <TextBlock x:Name="Avg10sText"
                           FontSize="14"
                           Margin="0,0,12,0"/>
                <TextBlock x:Name="Avg30sText"
                           FontSize="14"/>
            </StackPanel>

            <!-- 状態表示 -->
            <TextBlock x:Name="StateText"
                       FontSize="14"
                       HorizontalAlignment="Center"/>

        </StackPanel>
    </Border>
</Window>
